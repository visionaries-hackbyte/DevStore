<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/floating_nav_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="6dp"
    android:background="@drawable/rounded_nav_bar"
    android:elevation="8dp"
    android:padding="8dp"
    app:layout_anchorGravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <!-- Categories -->
        <LinearLayout
            android:id="@+id/navbar_history"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="4dp">

            <ImageButton
                android:id="@+id/history"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:src="@drawable/categories" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categories"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/LoginBtn"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navbar_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="4dp">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:src="@drawable/home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/LoginBtn"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Upload -->
        <LinearLayout
            android:id="@+id/navbar_upload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="4dp">

            <ImageButton
                android:id="@+id/upload"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:src="@drawable/upload" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/LoginBtn"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Downloads -->
        <LinearLayout
            android:id="@+id/navbar_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="4dp">

            <ImageButton
                android:id="@+id/download"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@null"
                android:src="@drawable/download" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Downloads"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/LoginBtn"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.appbar.MaterialToolbar>